doctype html
html
    head
        title Add Trash
        link(rel='stylesheet', href='/css/trashaddform.css')
    body
        .grid
            #form
                h1 Bin Info Form
                form(method='POST' action='/auth/usercenter/saveTrash')
                    div
                        label(for='type')
                        a Type:
                        input(type='text', placeholder='Enter bin type' name='type')
                    div
                        label(for='photo')
                        a Picture:
                        input(type='text', placeholder='Enter picture link' name='photo')
                    div
                        label(for='location')
                        a Location:
                        input(type='text', placeholder='[Longitude, Latitude]' name='location')
                    .buttons
                        button#submit Submit